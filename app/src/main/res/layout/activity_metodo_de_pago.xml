<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".metodoDePago">

    <Button
        android:id="@+id/efectivo"
        android:layout_width="131dp"
        android:layout_height="60dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="50dp"
        android:text="Pago En Efectivo"
        app:backgroundTint="#A52323"
        app:layout_constraintBottom_toTopOf="@+id/tarjeta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tarjeta"
        android:layout_width="131dp"
        android:layout_height="60dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="400dp"
        android:text="Pago Con Tarjeta"
        app:backgroundTint="#A52323"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/efectivo" />

</androidx.constraintlayout.widget.ConstraintLayout>